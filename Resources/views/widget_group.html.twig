{% if type =='start' %}
    {%- set htmlAttributes = htmlAttributes|merge({
        class: (htmlAttributes.class|default('') ~ ' widget widget-group')|trim
    }) -%}
    <div{% for name, value in htmlAttributes %} {{ name }}="{{ value }}"{% endfor %}>
        <div class="widget-group--header">
            {% if group.label %}
                <h3>{{ group.label }}</h3>
                {% if group.description %}
                    <p class="tl_help tl_tip">{{ group.description|raw }}</p>
                {% endif %}
            {% endif %}
        </div>
        <div class="widget-group--container" data-min="{{ group.minElements }}" data-max="{{ group.maxElements }}" data-order="{{ order ? '1' : '0' }}">
{% else %}
        </div>
        <div class="widget-group--footer">
            <div class="drop-area"></div>
            <div class="controls">
                <input data-order type="hidden" name="widget-group__{{ group.name }}">
                <button type="button" disabled="disabled" data-add title="{{ 'DCA.new.1'|trans({}, 'contao_default') }}"></button>
            </div>
        </div>
    </div>
{% endif %}
